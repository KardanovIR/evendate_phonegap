<?xml version='1.0' encoding='utf-8'?>
<widget id="ru.evendate.phonegap"
        version="1.0.3"
        xmlns="http://www.w3.org/ns/widgets"
        xmlns:gap="http://phonegap.com/ns/1.0"
        versionCode = "1">
    <name>Evendate</name>
    <description>
        Evendate application
    </description>
    <author email="support@evendate.ru" href="http://evendate.ru">
        Evendate Team
    </author>

    <gap:config-file platform="iOS" parent="CFBundleVersion">
        <string>1.0.1</string>
    </gap:config-file>

    <content src="index.html" />
    <preference name="permissions" value="none" />
    <preference name="orientation" value="portrait" />
    <preference name="target-device" value="handset" />
    <preference name="fullscreen" value="true" />
    <preference name="webviewbounce" value="true" />
    <preference name="prerendered-icon" value="true" />
    <preference name="stay-in-webview" value="false" />
    <preference name="ios-statusbarstyle" value="black-opaque" />
    <preference name="detect-data-types" value="true" />
    <preference name="exit-on-suspend" value="false" />
    <preference name="show-splash-screen-spinner" value="true" />
    <preference name="auto-hide-splash-screen" value="true" />
    <preference name="disable-cursor" value="true" />
    <preference name="deployment-target" value="8.0" />


    <preference name="StatusBarOverlaysWebView" value="true"/>
    <preference name="StatusBarBackgroundColor" value="#000000"/>
    <preference name="StatusBarStyle" value="lightcontent" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="UIWebViewBounce" value="false" />
    <preference name="webviewbounce" value="false" />

    <gap:plugin name="org.apache.cordova.battery-status" />
    <gap:plugin name="org.apache.cordova.camera" />
    <gap:plugin name="org.apache.cordova.media-capture" />
    <gap:plugin name="org.apache.cordova.console" />
    <gap:plugin name="org.apache.cordova.contacts" />
    <gap:plugin name="org.apache.cordova.device" />
    <gap:plugin name="org.apache.cordova.device-motion" />
    <gap:plugin name="org.apache.cordova.device-orientation" />
    <gap:plugin name="org.apache.cordova.dialogs" />
    <gap:plugin name="org.apache.cordova.file" />
    <gap:plugin name="org.apache.cordova.file-transfer" />
    <gap:plugin name="org.apache.cordova.geolocation" />
    <gap:plugin name="org.apache.cordova.globalization" />
    <gap:plugin name="org.apache.cordova.inappbrowser" />
    <gap:plugin name="org.apache.cordova.media" />
    <gap:plugin name="org.apache.cordova.network-information" />
    <gap:plugin name="org.apache.cordova.splashscreen" />
    <gap:plugin name="org.apache.cordova.vibration" />


    <gap:plugin name="com.sharinglabs.cordova.plugin.datepicker" />
    <gap:plugin name="com.phonegap.plugins.childbrowser" version="5.0.0" />
    <gap:plugin name="org.apache.cordova.console"/>
    <gap:plugin name="org.apache.cordova.dialogs"/>
    <gap:plugin name="com.phonegap.plugins.pushplugin"/>
    <gap:plugin name="com.brodysoft.sqliteplugin" version="1.0.6" />
    <gap:plugin name="org.apache.cordova.statusbar" version="0.1.4" />
    <gap:plugin name="com.analytics.google" version="1.2.2" />
    <gap:plugin name="org.apache.cordova.inappbrowser" version="0.5.2" />


    <icon src="www/res/icon/ios/icon.png" />
    <icon gap:platform="ios" height="57" src="res/icon/ios/icon-57.png" width="57" />
    <icon gap:platform="ios" height="72" src="res/icon/ios/icon-72.png" width="72" />
    <icon gap:platform="ios" height="114" src="res/icon/ios/icon-57-2x.png" width="114" />
    <icon gap:platform="ios" height="120" src="res/icon/ios/icon-120.png" width="120" />
    <icon gap:platform="ios" height="144" src="res/icon/ios/icon-72-2x.png" width="144" />

    <icon platform="ios" height="57" src="res/icon/ios/icon-57.png" width="57" />
    <icon platform="ios" height="72" src="res/icon/ios/icon-72.png" width="72" />
    <icon platform="ios" height="114" src="res/icon/ios/icon-57-2x.png" width="114" />
    <icon platform="ios" height="120" src="res/icon/ios/icon-120.png" width="120" />
    <icon platform="ios" height="144" src="res/icon/ios/icon-72-2x.png" width="144" />


    <!-- Optional splash screen image, e.g.: -->
    <gap:splash src="res/screen/ios/screen-iphone-landscape.png" gap:platform="ios" width="480" height="320" />
    <gap:splash src="res/screen/ios/screen-iphone-portrait.png" gap:platform="ios" width="320" height="480" />

    <gap:splash src="res/screen/ios/screen-iphone-landscape-2x.png" gap:platform="ios" width="960" height="640" />
    <gap:splash src="res/screen/ios/screen-iphone-portrait-2x.png" gap:platform="ios" width="640" height="960" />

    <gap:splash src="res/screen/ios/screen-iphone1136-portrait.png" gap:platform="ios" width="1136" height="640" />
    <gap:splash src="res/screen/ios/screen-iphone-portrait-568h-2x.png" gap:platform="ios" width="640" height="1136" />

    <gap:splash src="res/screen/ios/screen-ipad-landscape.png" gap:platform="ios" width="1024" height="768" />
    <gap:splash src="res/screen/ios/screen-ipad-portrait.png" gap:platform="ios" width="768" height="1024" />

    <gap:splash src="res/screen/ios/screen-iphone568-portrait.png" gap:platform="ios" width="568" height="320" />
    <gap:splash src="res/screen/ios/screen-iphone320-portrait.png" gap:platform="ios" width="320" height="568" />

    <gap:splash src="res/screen/ios/screen-iphone1334-portrait.png" gap:platform="ios" width="1334" height="750" />
    <gap:splash src="res/screen/ios/screen-iphone750-portrait.png" gap:platform="ios" width="750" height="1334" />

    <gap:splash src="res/screen/ios/screen-iphone2208-portrait.png" gap:platform="ios" width="2208" height="1242" />
    <gap:splash src="res/screen/ios/screen-iphone1242-portrait.png" gap:platform="ios" width="1242" height="2208" />

    <gap:splash src="res/screen/ios/screen-iphone2048-portrait.png" gap:platform="ios" width="2048" height="1536" />
    <gap:splash src="res/screen/ios/screen-iphone1536-portrait.png" gap:platform="ios" width="1536" height="2048" />




    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="map:*" />
    <allow-intent href="maps:*" />
    <allow-intent href="geo:*" launch-external="yes"/>

    <platform name="ios">
        <access origin="*" />
        <access origin="geo:*" launch-external="yes"/>
        <allow-intent href="http://*/*" />
        <allow-intent href="https://*/*" />
        <allow-intent href="tel:*" />
        <allow-intent href="sms:*" />
        <allow-intent href="mailto:*" />
        <allow-intent href="map:*" />
        <allow-intent href="maps:*" />


        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <plugin name="InAppBrowser" value="CDVInAppBrowser" />

        <!-- iOS 8.0+ -->
        <!-- iPhone 6 Plus  -->
        <icon src="res/ios/icon-72-2x.png" width="180" height="180" />
        <!-- iOS 7.0+ -->
        <!-- iPhone / iPod Touch  -->
        <icon src="res/ios/icon-57.png" width="60" height="60" />
        <icon src="res/ios/icon-57-2x.png" width="120" height="120" />
        <!-- iPad -->
        <icon src="res/ios/icon-57.png" width="76" height="76" />
        <icon src="res/ios/icon-57-2x.png" width="152" height="152" />
        <!-- iOS 6.1 -->
        <!-- Spotlight Icon -->
        <icon src="res/ios/icon-57.png" width="40" height="40" />
        <icon src="res/ios/icon-40@2x.png" width="80" height="80" />
        <!-- iPhone / iPod Touch -->
        <icon src="res/ios/icon-57.png" width="57" height="57" />
        <icon src="res/ios/icon-57-2x.png" width="114" height="114" />
        <!-- iPad -->
        <icon src="res/ios/icon-72.png" width="72" height="72" />
        <icon src="res/ios/icon-72-2x.png" width="144" height="144" />
        <!-- iPhone Spotlight and Settings Icon -->
        <icon src="res/ios/icon-57.png" width="29" height="29" />
        <icon src="res/ios/icon-57-2x.png" width="58" height="58" />
        <!-- iPad Spotlight and Settings Icon -->
        <icon src="res/ios/icon-57.png" width="50" height="50" />
        <icon src="res/ios/icon-57-2x.png" width="100" height="100" />

        <!-- iPad Spotlight and Settings Icon -->
        <icon src="res/ios/icon-120.png" width="120" height="120" />

        <splash src="res/screen/ios/screen-iphone-landscape.png" width="480" height="320" />
        <splash src="res/screen/ios/screen-iphone-portrait.png" width="320" height="480" />

        <splash src="res/screen/ios/screen-iphone-landscape-2x.png" width="960" height="640" />
        <splash src="res/screen/ios/screen-iphone-portrait-2x.png" width="640" height="960" />

        <splash src="res/screen/ios/screen-iphone1136-portrait.png" width="1136" height="640" />
        <splash src="res/screen/ios/screen-iphone-portrait-568h-2x.png" width="640" height="1136" />

        <splash src="res/screen/ios/screen-ipad-landscape.png" width="1024" height="768" />
        <splash src="res/screen/ios/screen-ipad-portrait.png" width="768" height="1024" />

        <splash src="res/screen/ios/screen-iphone-portrait.png" width="568" height="320" />
        <splash src="res/screen/ios/screen-iphone-portrait.png" width="320" height="568" />

        <splash src="res/screen/ios/screen-iphone1334-portrait.png" width="1334" height="750" />
        <splash src="res/screen/ios/screen-iphone750-portrait.png" width="750" height="1334" />

        <splash src="res/screen/ios/screen-iphone2208-portrait.png" width="2208" height="1242" />
        <splash src="res/screen/ios/screen-iphone1242-portrait.png" width="1242" height="2208" />

        <splash src="res/screen/ios/screen-iphone2048-portrait.png" width="2048" height="1536" />
        <splash src="res/screen/ios/screen-iphone1536-portrait.png" width="1536" height="2048" />
    </platform>


    <feature name="DatePicker">
        <param name="ios-package" value="DatePicker"/>
    </feature>
    <feature name="NetworkStatus">
        <param name="ios-package" value="CDVConnection" />
    </feature>
    <feature name="Device">
        <param name="ios-package" value="CDVDevice" />
        <param name="android-package" value="org.apache.cordova.device.Device" />
    </feature>
    <feature name="File">
        <param name="ios-package" value="CDVFile" />
        <param name="android-package" value="org.apache.cordova.file.FileUtils" />
    </feature>
    <feature name="FileTransfer">
        <param name="ios-package" value="CDVFileTransfer" />
        <param name="android-package" value="org.apache.cordova.filetransfer.FileTransfer" />
    </feature>

    <gap:platforms>
        <gap:platform name="ios" />
    </gap:platforms>
</widget>
